<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linear_layout_test"
    tools:context="com.example.seatrend.myapplication.activity.CropTestActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_crop_before"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/butt"/>
    <Button
        android:id="@+id/btn_crop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnCrop"
        android:text="裁剪"/>
    <ImageView
        android:id="@+id/iv_crop_later"
        android:layout_width="200dp"
        android:layout_height="150dp"/>
    <com.example.seatrend.myapplication.JavaTest.VinRedRectangle
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"/>
</LinearLayout>
